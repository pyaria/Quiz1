<h1>Welcome</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Department</th>
    <th>Message</th>
    <th>Actions</th>
  </tr>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.email %></td>
        <td><%= request.department %></td>
        <td><%= request.message %></td>
        <td><%= link_to "Edit", edit_request_path(request) %>
        <%= link_to "Delete", request_path(request.id), {method: :delete, data: {confirm: "Are you sure?"}}%></td>

      </tr>
    <% end %>
</table>
